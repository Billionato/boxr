<div class="form-container">
    <div class="col-md-8 col-md-offset-2">
        <%= simple_form_for(@move, html: { class: 'form-horizontal'}) do |f| %>
            <%= f.input :name, label: false, error: "What's the name of the move?", placeholder: "Enter move name"%>
            <%= f.input :from, label: false, error: "Where are you moving from?", placeholder: "Where are you moving from?" %>
            <%= f.input :to, label: false, error: "Where are you moving to?", placeholder: "Where are you moving to?" %>
            <%= f.button :submit, class: "btn btn-success btn-lg btn-block" %>
        <% end %>
    </div>
</div>