<div class="container">
    <%= simple_form_for(@move, html: { class: 'form-horizontal'}) do |f| %>
        <%= f.input :name, label: "Move Name" %>
        <%= f.input :from, label: "From", placeholder: "Where are you moving from?" %>
        <%= f.input :to, label: "To", placeholder: "Where are you headed?" %>
        
        <%= f.button :submit, class: "btn btn-success btn-block" %>
    <% end %>
</div>