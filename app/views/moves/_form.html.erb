<div class="container">
    <%= simple_form_for(@move, html: {class: 'form-horizontal'}) do |f| %>
        <%= f.input :name, label: "Move Name" %>
        <%= f.input :from, label: false, placeholder: "Where are you moving from?" %>
        <%= f.input :to, label: false, placeholder: "Where are you moving to?" %>
        <%= f.button :submit, "Create Trip" %>
    <% end %>
</div>