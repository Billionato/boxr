<%= link_to @box, class: "internal-nav" do %>
    <i class="fa fa-arrow-left"></i>
    Cancel
<% end %>

<div class="form-container">
    <div class="col-md-8 col-md-offset-2">
        <%= simple_form_for([@box, @item], html: { class: "form-horizontal" }) do |f| %>
            <%= f.input :name, label: false, placeholder: "Item Name" %>
            <%= f.button :submit, class: "btn btn-success btn-block" %>
        <% end %>
    </div>
</div>