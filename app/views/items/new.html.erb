<%= link_to @box, class: "internal-nav" do %>
    <i class="fa fa-arrow-left"></i>
    Cancel
<% end %>

<div class="form-container">
    <div class="col-md-8 col-md-offset-2">
        <%= simple_form_for([@box, @item], html: { class: "form-horizontal" }) do |f| %>
            <%= f.file_field :image %>
            <%= f.input :name, label: false, required: true, error: "Cant' be blank", placeholder: "Item Name" %>
            <%= button_tag "Add Item", class: "btn btn-success btn-lg btn-block", data: { disable_with: "<i class='fa fa-spinner fa-pulse'></i> Adding Item..." } %>
        <% end %>
    </div>
</div>