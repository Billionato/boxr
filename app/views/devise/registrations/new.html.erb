<div class="form-container">
  <div class="col-md-8 col-md-offset-2">
    <h2>Sign up</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
    
      <div class="form-inputs">
        <%= f.input :first_name, label: false, placeholder: "First Name", required: true, autofocus: true %>
        <%= f.input :last_name, label: false, placeholder: "Last Name", required: true %>
        <%= f.input :email, label: false, placeholder: "Email", required: true %>
        <%= f.input :password, label: false, placeholder: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: false, placeholder: "Password, again", required: true %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-block btn-info" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
