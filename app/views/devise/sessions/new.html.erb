<div class="form-container">
  <div class="col-md-8 col-md-offset-2">
    <%= link_to user_omniauth_authorize_path(:facebook), id: "fb-login", class: "btn btn-lg omniauth-login" do %>
      <i class="fa fa-facebook-official"></i>
      Login with Facebook
    <% end %>
    
    <hr></hr>
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: false, placeholder: "Email", required: false %>
        <%= f.input :password, label: false, placeholder: "Password", required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    
      <div class="form-actions">
        <%= button_tag "Log in", class: "btn btn-block btn-info", data: { disable_with: "<i class='fa fa-spinner fa-pulse'></i> Logging in..." } %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
